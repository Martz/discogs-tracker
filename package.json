{
  "name": "discogs-price-tracker",
  "version": "1.0.0",
  "description": "CLI tool to track Discogs collection prices over time",
  "bin": {
    "discogs-tracker": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": ["discogs", "vinyl", "records", "price-tracking", "cli"],
