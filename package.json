    "conf": "^12.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cli-table": "^0.3.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "tsx": "^4.7.0",
